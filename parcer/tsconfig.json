{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "module": "commonjs",

    /* Emit */
    "outDir": "./dist", // <-- ДОДАЙТЕ/РОЗКОМЕНТУЙТЕ ЦЕЙ РЯДОК
    // "sourceMap": true, // Можна розкоментувати, якщо хочете sourcemaps для відладки

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["main.ts"] // <-- ДОДАЙТЕ/РОЗКОМЕНТУЙТЕ ЦЕЙ РЯДОК АБО ВКАЖІТЬ ПРАВИЛЬНИЙ ШЛЯХ
}
